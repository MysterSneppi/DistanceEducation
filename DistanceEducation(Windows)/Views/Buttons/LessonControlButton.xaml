<UserControl x:Class="DistanceEducation_Windows_.Views.Buttons.LessonControlButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DistanceEducation_Windows_.Views.Buttons"
             xmlns:vm="clr-namespace:DistanceEducation_Windows_.ViewModels.Buttons"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

  
    
    <Border CornerRadius="{Binding CornerRadius}"
            Background="{Binding BackColor}"
            Opacity="75"           
            Width="{Binding WidthBorder}"
            Height="{Binding HeightBorder}"
            Cursor="Hand">

      

        <Image HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Width="{Binding ImageWidth}"
               Height="{Binding ImageHeight}"
               
               Margin="0,0,0,0"
               RenderOptions.BitmapScalingMode="HighQuality"
               Source="{Binding ImageSource }"/>

    </Border>
</UserControl>
