<UserControl x:Class="DistanceEducation_Windows_.Components.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DistanceEducation_Windows_.Components"
            xmlns:component="clr-namespace:DistanceEducation_Windows_.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <PasswordBox x:Name="passwordBox" 
                 Background="Transparent"
                 BorderBrush="Transparent"
                 IsHitTestVisible="True"
                 BorderThickness="0"
                 PasswordChanged="passwordBox_PasswordChanged"/>
</UserControl>
